<h1>Sign In</h1>

<%#= render 'form' %>
<div class="container">
  <% if flash[:notice] %>
    <div class="container" style="background-color: lime">
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="container" style="background-color: pink">
      <%= flash[:alert] %>
    </div>
  <% end %>
</div>
<%= form_tag sessions_path, method: :post do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, "", class: 'form-input' %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", class: 'form-input' %>
  </div>
  <div class="form-group">
    <%= submit_tag "Sign In" %>
  </div>

<% end %>


<%= link_to 'Back To Index', auctions_path %>
